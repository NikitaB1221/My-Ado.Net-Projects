<Window x:Class="Sales.PortalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sales"
        mc:Ignorable="d"
        Title="PortalWindow" Height="800" Width="450">
    <StackPanel Orientation="Vertical">
        <Label  HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold">
            ADO Technology
        </Label>
        <Button Content="Conected mode" Margin="5" FontSize="14" FontWeight="DemiBold" Click="Connected_Click"/>
        <Button Content="Detached mode" Margin="5" FontSize="14" FontWeight="DemiBold" Click="Detached_Click"/>
    </StackPanel>
</Window>
